{{>header}}
<main
  class="col-md-5 d-flex flex-column align-items-center pt-5 mt-5 container"
>
  <!-- Tabs -->
  <ul
    class="nav nav-tabs mb-4 sticky-top shadow sticky-nav"
    id="homeTabs"
    role="tablist"
  >
    <li class="nav-item" role="presentation">
      <button
        class="nav-link active text-dark fw-bold"
        id="for-you-tab"
        data-bs-toggle="tab"
        data-bs-target="#for-you"
        type="button"
        role="tab"
        aria-controls="for-you"
        aria-selected="true"
      >
        For You
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button
        class="nav-link text-dark fw-bold"
        id="following-tab"
        data-bs-toggle="tab"
        data-bs-target="#following"
        type="button"
        role="tab"
        aria-controls="following"
        aria-selected="false"
      >
        Following
      </button>
    </li>
  </ul>

  <!-- Tab Content -->
  <div class="tab-content w-100" id="homeTabsContent">
    <!-- For You Tab -->
    <div
      class="tab-pane fade show active"
      id="for-you"
      role="tabpanel"
      aria-labelledby="for-you-tab"
    >
      <div id="forYouBlogs">{{#each blogs}} {{>blog}} {{/each}}</div>
      <div class="d-flex justify-content-center">
        <button
          class="btn btn-secondary mb-5"
          id="loadMoreForYou"
          data-offset="10"
        >
          Load more
        </button>
      </div>
    </div>

    <!-- Following Tab -->
    <div
      class="tab-pane fade"
      id="following"
      role="tabpanel"
      aria-labelledby="following-tab"
    >
      <div id="followingBlogs">
        {{#each followingBlogs}} {{>blog}} {{/each}}
      </div>
      <div class="d-flex justify-content-center">
        <button
          class="btn btn-secondary mb-5"
          id="loadMoreFollowing"
          data-offset="10"
        >
          Load more
        </button>
      </div>
    </div>
  </div>
</main>

{{>navBar}}

<script>
  document.addEventListener("DOMContentLoaded", () => {
    document
      .getElementById("loadMoreForYou")
      .addEventListener("click", async (e) => {
        const button = e.target;
        const offset = parseInt(button.getAttribute("data-offset"));

        try {
          const response = await fetch(
            `/load-more?tab=for-you&offset=${offset}`
          );
          const data = await response.text();

          if (data) {
            document
              .getElementById("forYouBlogs")
              .insertAdjacentHTML("beforeend", data);
            button.setAttribute("data-offset", offset + 10);
          } else {
            button.disabled = true;
            button.innerText = "No more blogs";
          }
        } catch (err) {
          console.error("Error loading more blogs:", err);
        }
      });

    document
      .getElementById("loadMoreFollowing")
      .addEventListener("click", async (e) => {
        const button = e.target;
        const offset = parseInt(button.getAttribute("data-offset"));

        try {
          const response = await fetch(
            `/load-more?tab=following&offset=${offset}`
          );
          const data = await response.text();

          if (data) {
            document
              .getElementById("followingBlogs")
              .insertAdjacentHTML("beforeend", data);
            button.setAttribute("data-offset", offset + 10);
          } else {
            button.disabled = true; // Disable button if no more data
            button.innerText = "No more blogs";
          }
        } catch (err) {
          console.error("Error loading more blogs:", err);
        }
      });
  });
</script>
