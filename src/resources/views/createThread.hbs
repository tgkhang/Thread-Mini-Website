{{>header}}

<main class="container pt-5 mt-5">
    <div class="row justify-content-center">
        <!-- Notification Messages -->
        {{#if done}}
        <div class="alert alert-success text-center" role="alert">
            Thread created successfully!
        </div>
        <a class="btn btn-outline-dark w-100 py-2 rounded-pill" href="/profile">Back To Profile</a>
        {{else}}
        <form action="/createThread" method="post" class="col-12 col-md-8 col-lg-6" enctype="multipart/form-data">
            <div class="my-4">
                <!-- User Info -->
                {{#with userInfo}}
                <div class="user-info d-flex align-items-center mb-3">
                    <img 
                        src="{{imagePath}}" 
                        alt="User Avatar" 
                        class="rounded-circle me-3" 
                        width="50" 
                        height="50">
                    <span class="fw-bold fs-5">{{userName}}</span>
                </div>
                {{/with}}
                <!-- Thread Input Area -->
                <div class="thread-input-area mb-3">
                    <textarea 
                        class="form-control border border-secondary" 
                        placeholder="What's new?" 
                        name="text" 
                        rows="5" 
                        style="resize: none;"></textarea>
                </div>

                <!-- Image Input -->
                <div class="mb-3">
                    <label for="image" class="form-label">Add Image</label>
                    <input type="file" name="image" id="image" accept="image/*" class="form-control">
                </div>

                <!-- Thread Actions -->
                <div class="thread-actions d-flex justify-content-between align-items-center">
                    <button 
                        type="submit" 
                        class="btn btn-secondary btn-sm d-flex align-items-center">
                        <i class="bi bi-send me-2"></i> Post
                    </button>
                </div>
            </div>
        </form>

        {{/if}}

        {{#if error}}
        <div class="alert alert-danger text-center" role="alert">
            {{error}}
        </div>
        {{/if}}
    </div>
</main>

{{> navBar}}

<!-- Custom Styles -->
<style>
    .thread-input-area textarea {
        border-color: #6c757d;
        font-size: 1rem;
        overflow-y: auto; 
        line-height: 1.5;
        padding: 10px;
    }

    .user-info span {
        font-size: 1.125rem;
    }

    .thread-actions button {
        transition: all 0.3s ease-in-out;
    }

    .thread-actions button:hover {
        background-color: #6c757d;
        color: white;
    }

    @media (max-width: 576px) {
        .thread-actions button {
            font-size: 0.875rem;
        }

        .user-info span {
            font-size: 1rem;
        }

        .thread-input-area textarea {
            height: auto; /* Adjust height dynamically for small screens */
        }
    }
</style>
