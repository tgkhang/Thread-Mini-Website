{{>header}}
<main class="d-flex flex-column align-items-center pt-5 mt-5">
  <h1 class="fs-1 mt-4 text-center">Forgot Your Password?</h1>
  {{#if done}}
  <p class="fs-4 text-center text-success mt-3 mb-4">
    An email has been sent. Please check your inbox.
  </p>
  {{else}}
  <p class="fs-4 text-center text-muted mt-3 mb-4">
    Enter your email to begin the password reset process.
  </p>
  <!-- Icon Section -->
  <div class="mb-4">
    <i class="bi bi-person-lock display-4 text-primary"></i>
  </div>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10 col-md-8 col-lg-6">
        <form action="/forgot" method="post" id="formForgot">
          <div class="form-floating mb-4">
            <input
              type="email"
              class="form-control form-control-lg"
              name="email"
              id="formId1"
              placeholder="Enter email"
              aria-label="Enter email"
              pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$"
              required
            />
            <label for="formId1">Email</label>
          </div>

          <!-- Centered Submit Button -->
          <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary btn-lg px-4 py-2 mt-3">
              Send Reset Link
            </button>
          </div>

          <!-- Conditional Rendering for Error Message -->
          {{#if message}}
          <div class="alert alert-warning mt-3">{{{message}}}</div>
          {{/if}}
        </form>
      </div>
    </div>
  </div>
  {{/if}}

  <!-- Back to Login Link -->
  <a href="/login" class="btn btn-link mt-3">Back to Login</a>
</main>
