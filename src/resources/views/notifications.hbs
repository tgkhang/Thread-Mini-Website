{{>header}}

<main class="col-md-5 d-flex flex-column align-items-center mt-5 container">
  <div class="pt-5 container col-md-12">
    <h4 class="mb-4 text-center">Notifications</h4>

    <!-- Tabs -->
    <ul
      class="nav nav-tabs notification-tabs justify-content-center mb-4 flex-wrap"
      id="notificationTabs"
      role="tablist"
    >
      <li class="nav-item me-2" role="presentation">
        <button
          class="nav-link active"
          id="all-tab"
          data-bs-toggle="tab"
          data-bs-target="#all"
          type="button"
          role="tab"
          aria-controls="all"
          aria-selected="true"
        >
          All
        </button>
      </li>
      <li class="nav-item me-2" role="presentation">
        <button
          class="nav-link"
          id="like-tab"
          data-bs-toggle="tab"
          data-bs-target="#unseen"
          type="button"
          role="tab"
          aria-controls="unseen"
          aria-selected="false"
        >
          Unseen
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button
          class="nav-link"
          id="comment-tab"
          data-bs-toggle="tab"
          data-bs-target="#seen"
          type="button"
          role="tab"
          aria-controls="seen"
          aria-selected="false"
        >
          Seen
        </button>
      </li>
    </ul>
  </div>

  <!-- Notification Content -->
  <div class="container col-md-10 my-4">
    <div class="tab-content" id="notificationTabsContent">
      <!-- All Notifications Tab -->
      <div
        class="tab-pane fade show active"
        id="all"
        role="tabpanel"
        aria-labelledby="all-tab"
      >
        {{#each allNotifications}} {{> notificationBar}} {{/each}}
      </div>

      <!-- unseen Tab -->
      <div
        class="tab-pane fade"
        id="unseen"
        role="tabpanel"
        aria-labelledby="like-tab"
      >
        {{#each unseenNotifications}} {{> notificationBar}} {{/each}}
      </div>

      <!-- seen Tab -->
      <div
        class="tab-pane fade"
        id="seen"
        role="tabpanel"
        aria-labelledby="comment-tab"
      >
        {{#each seenNotifications}} {{> notificationBar}} {{/each}}
      </div>
    </div>
  </div>
</main>

{{> navBar}}

<!-- Custom Styles -->
<style>
  /* Custom Tabs */
  .nav-tabs .nav-link {
    border-radius: 25px;
    font-weight: bold;
    padding: 10px 20px;
    color: #6c757d; /* Grey Text */
    border: 1px solid #6c757d;
    transition: all 0.3s ease-in-out;
  }

  .nav-tabs .nav-link.active {
    background-color: #6c757d; /* Active Tab Grey */
    color: #fff;
    border-color: #6c757d;
  }

  .nav-tabs .nav-link:hover {
    background-color: #f1f1f1;
  }

  .notification-item {
    background-color: #f8f9fa;
    border: 1px solid #e3e3e3;
    border-radius: 8px;
    padding: 15px;
    transition: all 0.3s ease-in-out;
  }

  .notification-item:hover {
    background-color: #e9ecef;
  }

  .notification-item.like {
    border-left: 4px solid #ff6b6b; /* Red for likes */
  }

  .notification-item.comment {
    border-left: 4px solid #66c2a5; /* Green for comments */
  }

  .notification-item.follow {
    border-left: 4px solid #6c757d; /* Grey for follows */
  }

  .notification-item p {
    margin-bottom: 0;
  }

  .notification-item .d-flex {
    align-items: center;
  }
</style>
