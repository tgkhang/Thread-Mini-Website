{{>header}}

<main class="col-md-5 d-flex flex-column align-items-center mt-5 container">

    <!-- Search Form -->
    <form method="GET" action="/searchResult" class="d-flex container col-md-5 my-4 mt-5 search-form-container">
        <input
            class="form-control me-sm-2"
            type="text"
            placeholder="Search"
            aria-label="Search"
            name="keyword"
            required
        />
        <button
            class="btn btn-outline-dark my-2 my-sm-0"
            type="submit"
        >
            Search
        </button>
    </form>

    <!-- Suggestions Section -->
    <h3 class="pt-4 container col-md-10">Suggestions for You</h3>

    <div class="container col-md-10 my-4">
        <ul class="list-group">
            <!-- Suggestion Item 1 -->

            {{#each suggestAccounts}}
                {{>miniUserProfile}}
            {{/each}}

        </ul>
    </div>

</main>

{{> navBar}}

<!-- Custom Styles -->
<style>
    /* Search Form Styles */
    .form-control {
        max-width: 300px;
        border-radius: 50px;
    }

    .btn-outline-dark {
        border-radius: 50px;
    }

    /* Suggestion List Styles */
    .list-group-item {
        background-color: #fff;
        border: 1px solid #e3e3e3;
        border-radius: 8px;
        padding: 15px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .list-group-item:hover {
        background-color: #f8f9fa;
        transform: translateY(-5px);
    }

    .hover-card {
        cursor: pointer;
    }

    .btn-outline-secondary {
        border-radius: 50px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }

    /* Avatar Styles */
    .rounded-circle {
        width: 40px;
        height: 40px;
    }

    /* Heading Styles */
    h3 {
        font-weight: 600;
        color: #495057;
    }



    /* Responsiveness */
    @media (max-width: 768px) {
        .container {
            padding-left: 10px;
            padding-right: 10px;
        }

        .form-control {
            max-width: 100%;
        }

        .list-group-item {
            padding: 10px;
        }
    }
</style>
