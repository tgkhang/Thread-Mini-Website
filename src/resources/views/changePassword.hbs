{{>header}}
<main class="d-flex flex-column align-items-center pt-5 mt-5">
  <h1 class="fs-1 mt-4 text-center">Reset Your Password</h1>

  {{#if done}}
  <p class="fs-4 text-center text-muted mt-3 mb-4">
    Your password has been reset. You can now <a href="/login">log in</a>.
  </p>
  <div class="mb-4">
    <i class="bi bi-check-circle-fill display-4 text-success"></i>
  </div>

  {{else if expired}}
  <p class="fs-4 text-center text-warning mt-3 mb-4">
    Your reset link has expired. Please request a new one.
  </p>
  <div class="mb-4">
    <i class="bi bi-exclamation-triangle-fill display-4 text-warning"></i>
  </div>
  <a href="/forgotPassword" class="btn btn-primary btn-lg px-4 py-2 mt-3"
    >Request New Link</a
  >

  {{else}}
  <p class="fs-4 text-center text-muted mt-3 mb-4">
    Create a new password for your account.
  </p>

  <!-- Icon Section -->
  <div class="mb-4">
    <i class="bi bi-key display-4 text-primary"></i>
  </div>

  <!-- Form Section -->
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10 col-md-8 col-lg-6">
        <form action="/reset" method="post" id="formReset">
          <!-- New Password Input Section -->
          <div class="form-floating mb-3">
            <input
              type="password"
              class="form-control"
              name="password"
              id="newPassword"
              placeholder="Enter new password"
              aria-label="Enter new password"
              pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
              title="Must contain at least one number, one uppercase and lowercase letter, and at least 8 or more characters"
              onchange="checkPasswordConfirm('formReset')"
              required
            />
            <label for="newPassword">New Password</label>
          </div>

          <!-- Confirm Password Input Section -->
          <div class="form-floating mb-4">
            <input
              type="password"
              class="form-control"
              name="confirmPassword"
              id="confirmPassword"
              placeholder="Confirm new password"
              aria-label="Confirm new password"
              onkeyup="checkPasswordConfirm('formReset')"
              required
            />
            <label for="confirmPassword">Confirm New Password</label>
          </div>

          <input type="hidden" name="email" value="{{email}}" />
          <input type="hidden" name="token" value="{{token}}" />

          <!-- Centered Submit Button -->
          <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary btn-lg px-4 py-2 mt-3">
              Reset Password
            </button>
          </div>

          {{#if message}}
          <div class="alert alert-warning mt-3">{{{message}}}</div>
          {{/if}}
        </form>
      </div>
    </div>
  </div>
  {{/if}}

  <!-- Back Link -->
  <a href="/login" class="btn btn-link mt-3">Back to Login</a>
</main>
