{{>header}}
<main class="col-md-5 d-flex flex-column align-items-center pt-5 mt-5 container">

    <!-- Profile Section -->
    {{#with userInfo}}
    <div class="text-center pb-4">
        <img src="{{imagePath}}" alt="User Picture" class="rounded-circle mb-3" style="width: 100px; height: 100px;">
        <h5 class="mt-2">{{firstName}} {{lastName}}</h5>
        <p class="text-muted">{{userName}}</p>

        <p class="mb-3 container my-4 col-md-10"> {{bio}}</p>
       
        <div class="d-flex justify-content-center gap-3">

            {{#if (eq @root.currentID @root.requestID)}}
                <a href="/editProfile" class="btn btn-outline-secondary">Edit Profile</a>
            
            {{else}}
                <a
                    href="javascript:void(0);"
                    role="button"
                    class="btn btn-outline-secondary btn-sm {{#if followed}}followed{{/if}}"
                    id="{{userName}}"
                    onclick="followHandle('{{userName}}', {{currentID}})"
                    >
                    {{#if followed}}Unfollow{{else}}Follow{{/if}}
                </a>
            {{/if}}

            <button class="btn btn-outline-secondary">Share Profile</button>
        </div>
    </div>
    {{/with}}

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-4 justify-content-center col-10 container" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button
                class="nav-link active me-2"
                id="home-tab"
                data-bs-toggle="tab"
                data-bs-target="#home"
                type="button"
                role="tab"
                aria-controls="home"
                aria-selected="true"
            >
                Threads
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button
                class="nav-link me-2"
                id="profile-tab"
                data-bs-toggle="tab"
                data-bs-target="#profile"
                type="button"
                role="tab"
                aria-controls="profile"
                aria-selected="false"
            >
                Follower
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button
                class="nav-link"
                id="messages-tab"
                data-bs-toggle="tab"
                data-bs-target="#messages"
                type="button"
                role="tab"
                aria-controls="messages"
                aria-selected="false"
            >
                Following
            </button>
        </li>
    </ul>


    <!-- Tab Content -->
    <div class="tab-content container my-4 col-md-10">
        
        <!-- Threads Tab -->
        <div class="tab-pane active" id="home" role="tabpanel" aria-labelledby="home-tab">
            {{#each blogs}}
                {{>blog}}
            {{/each}}
        </div>

   

        <!-- Follower Tab -->
        <div class="tab-pane" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <ul class="list-group">
                {{#each followerList}}
                    {{>miniUserProfile}}
                {{/each}}

            </ul>
        </div>

        <!-- Following Tab -->
        <div class="tab-pane" id="messages" role="tabpanel" aria-labelledby="messages-tab">
            <ul class="list-group">
                {{#each followingList}}
                    {{>miniUserProfile}}
                {{/each}}
            </ul>
        </div>
    </div>

</main>

{{> navBar}}

<!-- Custom Styles -->
<style>
    /* Custom Profile and Tabs */
    .nav-tabs .nav-link {
        border-radius: 25px;
        font-weight: bold;
        padding: 10px 20px;
        color: #6c757d;
        border: 1px solid #6c757d;
        transition: all 0.3s ease-in-out;
    }

    .nav-tabs .nav-link.active {
        background-color: #6c757d;
        color: white;
        border-color: #6c757d;
    }

    .nav-tabs .nav-link:hover {
        background-color: #f1f1f1;
    }

    /* Thread Post Styles */
    .thread-post {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 15px;
        border: 1px solid #e3e3e3;
        margin-bottom: 15px;
    }

    .thread-post:hover {
        background-color: #e9ecef;
    }

    /* Button Styles */
    .btn-outline-secondary {
        transition: all 0.3s ease;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }

    /* Avatar and List Styling */
    .list-group-item {
        background-color: #fff;
        border: 1px solid #e3e3e3;
        border-radius: 8px;
        padding: 10px;
    }

    .list-group-item:hover {
        background-color: #f8f9fa;
    }

    .list-group-item .d-flex {
        align-items: center;
    }

    /* Profile Styling */
    .text-muted {
        color: #6c757d !important;
    }
</style>


<style>
    /* Search Form Styles */
    .form-control {
        max-width: 300px;
        border-radius: 50px;
    }

    .btn-outline-dark {
        border-radius: 50px;
    }

    /* Suggestion List Styles */
    .list-group-item {
        background-color: #fff;
        border: 1px solid #e3e3e3;
        border-radius: 8px;
        padding: 15px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .list-group-item:hover {
        background-color: #f8f9fa;
        transform: translateY(-5px);
    }

    .hover-card {
        cursor: pointer;
    }

    .btn-outline-secondary {
        border-radius: 50px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }

    /* Avatar Styles */
    .rounded-circle {
        width: 40px;
        height: 40px;
    }

    /* Heading Styles */
    h3 {
        font-weight: 600;
        color: #495057;
    }

   

    /* Responsiveness */
    @media (max-width: 768px) {
        .container {
            padding-left: 10px;
            padding-right: 10px;
        }

        .form-control {
            max-width: 100%;
        }

        .list-group-item {
            padding: 10px;
        }
    }
</style>
