{{>header}}

<main class="d-flex flex-column align-items-center pt-5 mt-5">
  <h1 class="fs-1 mt-4 text-center">Verification Sent</h1>
  <p class="fs-4 text-center text-muted mt-3 mb-4">
    We've sent a verification link/code to your email or phone number. Please
    check your inbox or SMS.
  </p>

  <!-- Icon Section -->
  <div class="mb-4">
    <i class="bi bi-envelope-check display-4 text-success"></i>
  </div>

  <!-- Instructions Section -->
  <div class="text-center mb-4">
    <p>
      If you don't see the email or text, please check your spam folder or try
      again.
    </p>
  </div>

  <!-- Resend Verification Button -->
  <button class="btn btn-secondary btn-lg px-4 py-2 mt-3">
    Resend Verification Code
  </button>

  <!-- Back to Login Link -->
  <a href="/login" class="btn btn-link mt-3">Back to Login</a>
</main>
